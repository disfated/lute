<p>
  <b style="font-size:120%">
    {{ term.Text }}
    {% if parentdata | length > 0 %}
    ({{ parentterms }})
    {% endif %}
  </b>
</p>

{% if flashmsg is not empty %}
<p class="small-flash-notice">{{ flashmsg }}</p>
{% endif %}

{% if term.Romanization is not empty %}
<p><i>{{ term.Romanization }}</i></p>
{% endif %}

{% for img in termImages %}
<img class="tooltip-image" src="{{ img }}" />
{% endfor %}

<p>{{ term.Translation | replace({"\n": '<br />'}) | raw }}</p>

<p>
  {% for t in termTags %}
  <span class="termpopup-tag">{{ t }}</span>
  {% endfor %}
</p>

{% if parentdata | length > 0 %}

<table>

  {% for p in parentdata %}
  <tr>
    <td style="vertical-align: top;">
      <b>{{ p.term }}</b>
      {% if p.roman is not empty %}
      <br /><i>({{ p.roman }})</i>
      {% endif %}
    </td>
    <td style="vertical-align: top;">
      {{ p.trans | replace({"\n": '<br />'}) | raw }}
      <p>
        {% for t in p.tags %}
        <span class="termpopup-tag">{{ t }}</span>
        {% endfor %}
      </p>
    </td>
  </tr>
{% endfor %}

</table>

{% endif %}
